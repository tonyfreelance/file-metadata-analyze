doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    base(href='/')
    title= title
    // Bootstrap
    link(href='./public/css/bootstrap.min.css', rel='stylesheet')
    link(href='./public/css/main.css', rel='stylesheet')
  body(ng-app="ImageSearchApp")
    .navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .navbar-header
        button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/") TonyFreelance
      
      .collapse.navbar-collapse.navbar-ex1-collapse
        ul.nav.navbar-nav
          li
            a(href="search") Search
          li  
            a(href="history") History 
    .container(ng-controller="ImageSearchController")
      div(ng-view)
        
    script(src='./public/js/angular.min.js')
    script(src='./public/js/angular-route.js')
    script(src='controllers/searchController.client.js')
    